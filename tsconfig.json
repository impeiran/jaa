{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "target": "es5",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}